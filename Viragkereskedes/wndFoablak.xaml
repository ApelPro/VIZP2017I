<Window x:Class="Viragkereskedes.wndFoablak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viragkereskedes"
        mc:Ignorable="d"
        Title="Virágkereskedés" Height="475" Width="375" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="220*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="265*"/>
            <ColumnDefinition Width="104*"/>
        </Grid.ColumnDefinitions>

        <TabControl x:Name="tbAblakok" HorizontalAlignment="Left" VerticalAlignment="Top" Height="382" Width="350" Margin="0,50,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <TabItem Header="Rendelés"/>
            <TabItem Header="Beállítások">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button x:Name="btBejelReg" Content="Bejelentkezés" Grid.Column="1" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top" Width="85" Height="20"/>
        <DockPanel HorizontalAlignment="Left" Height="50" LastChildFill="False" VerticalAlignment="Top" Width="265">

            <Grid Height="50" VerticalAlignment="Top" Width="82">
                <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="95,17,-77,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="64"/>
                <Label x:Name="label" Content="Label" Height="25" VerticalAlignment="Top" Margin="21,15,10,0"/>
            </Grid>
        </DockPanel>

    </Grid>
</Window>
