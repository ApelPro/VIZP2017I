<Window x:Class="Viragkereskedes.wndFoablak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Viragkereskedes"
        mc:Ignorable="d"
        Title="Virágkereskedés" Height="475" Width="441" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="205*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="314*"/>
            <ColumnDefinition Width="121*"/>
        </Grid.ColumnDefinitions>

        <TabControl x:Name="tbAblakok" Grid.ColumnSpan="2" Grid.Row="1">
            <TabItem Header="Rendelés"/>
            <TabItem Header="Beállítások">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>

            <Button x:Name="btBejelentkezés" Content="Bejelentkezés" Grid.Row="0" Margin="1" FontSize="11"/>
            <Button x:Name="btRegisztráció" Content="Regisztráció" Grid.Row="1" Margin="1" FontSize="11"/>
        </Grid>


        <Grid Grid.Row="0" Height="28">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="94*"/>
                <ColumnDefinition Width="92*"/>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="79*"/>

            </Grid.ColumnDefinitions>
            <Label x:Name="lbFelhasználónév" Content="Felhasználónév:" Grid.Column="0" Margin="1"/>
            <TextBox x:Name="tbFelhasználónév" Text="" Grid.Column="1" Margin="1,3"/>

            <Label x:Name="lbJelszó" Content="Jelszó:" Grid.Column="2" Margin="1"/>
            <TextBox x:Name="tbJelszó" Text="" Grid.Column="3" Margin="1,3"/>
        </Grid>



    </Grid>
</Window>
